<h2>posts list</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">New Post</button></a>

{{#each posts}}

<div class="card">
    <div class="card-body mt-4">
        <h4>{{title}}</h4>
        <small>Description: {{description}}</small>
        <small>Date: {{date}}</small><br>
        <small>Category: {{category.name}}</small><br>
        <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-3">Edit post</button></a>
        <a href="/admin/posts/delete/{{_id}}"><button class="btn btn-danger mt-3">Delete post</button></a>
    </div>
</div>

{{else}}
<p>No posts registered!</p>
{{/each}}
<h2>category list </h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-success">new category</button></a>

{{#each categories}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{name}}</h4>
        <small>Slug: {{slug}}</small><br>
        <small>creation date: {{date}}</small><br>
        <a href="/admin/categories/edit/{{_id}}"><button class="btn btn-success mt-4">edit category</button></a>
        <form action="/admin/categories/delete" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button class="btn btn-danger mt-2" type="submit">Delete categoty</button>
        </form>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma categoria registrada!</h4>
{{/each}}
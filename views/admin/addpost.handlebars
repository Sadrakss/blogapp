{{#each error}}
<div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h4>New Post:</h4>
        <form action="/admin/posts/new" method="POST">
            <label for="title">Title:</label>
            <input type="text" name="title" class="form-control" required>

            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control" required>

            <label for="description">Description: </label>
            <input type="text" name="description" class="form-control">

            <label for="content">Content: </label>
            <textarea name="content" id="" cols="30" rows="10" class="form-control"></textarea>

            <label for="category" class="mt-3" aria-required="true">Category: </label>
            <select name="category" id="" class="custom-select">
                {{#each categories}}
                <option value="{{_id}}"> {{name}} </option>
                    {{else}}
                    <option value="0">No registered category</option>
                    {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Create Post</button>

        </form>
    </div>
</div>